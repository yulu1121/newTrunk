<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/fragment_common_right_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/fragment_common_right_title"
        android:layout_width="wrap_content"
        android:text="美宅宝"
        android:textSize="15sp"
        android:textColor="@color/category_item_title"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_common_right_iv"
        android:padding="5dp"
        />
    <TextView
        android:id="@+id/fragment_common_right_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已接52单"
        android:textSize="10sp"
        android:layout_below="@id/fragment_common_right_title"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/category_item_description"/>
    <TextView
        android:id="@+id/fragment_common_right_positive"
        android:layout_width="wrap_content"
        android:text="好评81%"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/category_item_description"
        android:layout_height="wrap_content" />
</RelativeLayout>