<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.daowei.www.daoweitwo.view.myself.headactivity.LoginActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textSize="20sp"
                android:textColor="#000000"
                android:id="@+id/text_personal_data"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <ImageButton
                android:id="@+id/back_to_left"
                android:onClick="btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_left_back_2"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/login_out"
                android:onClick="loginOut"
                android:text="注册"
                android:textSize="17sp"
                android:textColor="#e63020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/user_password_login"
                android:textSize="15sp"
                android:gravity="center"
                android:text="用户密码登录"
                android:textColor="#7f7f7f"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_gravity="center_vertical"
                android:background="#c0c0c0"
                android:layout_width="1dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/phone_number_login"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#7f7f7f"
                android:text="手机号快捷登录"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:background="#f2f3f4"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <EditText
            android:id="@+id/edit1"
            android:hint="手机号码或账号昵称"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_clean1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/get_code"
            android:textColor="#e63020"
            android:background="@drawable/get_code_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="100dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:background="#c0c0c0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <EditText
            android:id="@+id/edit2"
            android:inputType="numberPassword"
            android:hint="请输入密码"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_clean2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/img_no_sea"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:background="#c0c0c0"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="#e63020"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
        <TextView
            android:id="@+id/standby_singal"
            android:gravity="center"
            android:text="未注册的手机将自动注册为到位用户"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/forget_password"
        android:gravity="right"
        android:layout_marginRight="20dp"
        android:text="忘记密码?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="140dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:background="#c0c0c0"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="1dp" />
        <TextView
            android:gravity="center"
            android:text="第三方快捷登录"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#c0c0c0"
            android:layout_width="wrap_content"
            android:layout_height="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:drawableTop="@drawable/login_wb"
                android:text="微博"
                android:button="@null"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:drawableTop="@drawable/login_qq"
                android:button="@null"
                android:text="QQ"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:drawableTop="@drawable/login_wx"
                android:button="@null"
                android:text="微信"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>


</RelativeLayout>
