<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridView
        android:id="@+id/fragment_common_sort_gv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:verticalSpacing="10dp"
        android:minHeight="300dp"
        android:numColumns="3"/>
    <LinearLayout
        android:layout_below="@id/fragment_common_sort_gv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fragment_common_sort_reset"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="重置"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/fragment_common_sort_yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="确定"
            android:background="@color/category_item_radio_btn"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_height="match_parent" />
    </LinearLayout>


</RelativeLayout>