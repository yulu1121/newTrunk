<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/category_toolbar"
        android:background="#ffffff"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="武汉"
            android:textColor="#000000"
            android:textSize="18sp"
            android:drawableStart="@drawable/img_location_s"
            android:drawableEnd="@drawable/home_img_city_arraw_black"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            >
            <RadioButton
                android:id="@+id/fragment_category_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/btn_title_search"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:background="#c0c0c0"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/btn_title_msg"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_below="@id/category_toolbar"
        android:id="@+id/category_line"
        android:layout_width="match_parent"
        android:background="#c0c0c0"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_below="@id/category_line"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/category_title_lv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            android:layout_height="match_parent">
        </ListView>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:background="#f2f3f4"/>
        <ListView
            android:id="@+id/category_content_lv"
            android:layout_width="0dp"
            android:divider="@null"
            android:layout_height="match_parent"
            android:layout_weight="3">
        </ListView>
    </LinearLayout>
</RelativeLayout>