<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:id="@+id/scrolling"
    android:fillViewport="true"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:id="@+id/service_item_image"
                    android:scaleType="centerCrop"
                    />
                <com.github.mmin18.widget.RealtimeBlurView
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_gravity="bottom"
                    android:alpha="0.7"
                    app:realtimeOverlayColor="#8000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        android:layout_weight="1"
                        android:id="@+id/service_item_title"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:id="@+id/service_sale_amount"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:gravity="end|center_vertical"
                        android:layout_marginEnd="10dp"
                        />
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:orientation="horizontal"
                android:background="#fff"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#ff00"
                    android:id="@+id/service_price"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    />
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#ff00"
                    android:id="@+id/service_add"
                    android:gravity="end|center_vertical"
                    android:layout_marginEnd="10dp"
                    android:drawableEnd="@drawable/takeout_bg_btn_increase_focus"
                    android:button="@null"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="#fff"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#000"
                        android:text="服务详情"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#000"
                        android:id="@+id/service_time"
                        android:gravity="center_vertical|start"
                        android:layout_weight="2"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#000"
                        android:id="@+id/service_today"
                        android:gravity="center_vertical|start"
                        android:layout_weight="2"
                        />
                </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c0c0c0"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/service_formation"
                android:background="#fff"
                android:paddingTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c0c0c0"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:background="#fff"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:id="@+id/service_company"
                    android:gravity="center_vertical|start"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:textSize="12sp"
                    android:id="@+id/service_positive_rate"
                    android:drawableEnd="@drawable/btn_arrow_right_gray"
                    android:layout_marginEnd="10dp"
                    android:textColor="#c0c0c0"
                    />
            </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="点击查看图文详情"
                    android:gravity="center"
                    android:id="@+id/go_formation"
                    android:textColor="#c0c0c0"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订购须知"
                    android:textColor="#000"
                    android:background="#fff"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#c0c0c0"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:background="#fff"
                    android:layout_height="wrap_content"
                    android:id="@+id/service_notification"
                    />
        </LinearLayout>
    </ScrollView>