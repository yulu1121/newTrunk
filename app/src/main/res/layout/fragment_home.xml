<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/home_toolbar"
        android:background="#ffffff"
        android:layout_height="?actionBarSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/street_text"
            android:textColor="#000"
            android:textSize="18sp"
            android:drawableStart="@drawable/img_location_s"
            android:drawableEnd="@drawable/home_img_city_arraw_black"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:id="@+id/frg_search"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/btn_title_search"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:background="#c0c0c0"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingTop="10dp"
                android:id="@+id/message"
                android:layout_gravity="center"
                android:drawableTop="@drawable/btn_title_msg"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <com.handmark.pulltorefresh.library.PullToRefreshExpandableListView
        android:layout_below="@id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_expanblelistView"
        />
</RelativeLayout>