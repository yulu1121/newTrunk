<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_margin="3dp"
    >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/hitposition"
            android:id="@+id/home_footer_iv"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_footer_title"
            android:text="云驾证"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:drawablePadding="3dp"
            android:textColor="#000"
            android:layout_below="@id/home_footer_iv"
            android:drawableStart="@drawable/img_goods_item_store"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/home_footer_title">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/home_footer_businnes"
            android:text="已接100单"
            android:textSize="10sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/home_footer_positive"
            android:textSize="10sp"
            android:layout_weight="2"
            android:text="98%好评"
            android:gravity="right"
            />

    </LinearLayout>

</RelativeLayout>