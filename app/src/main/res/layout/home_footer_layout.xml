<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:orientation="vertical"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="推荐服务商"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:drawableEnd="@drawable/home_footer_line"
            android:drawableStart="@drawable/home_footer_line"
            />
    <com.daowei.www.daoweitwo.view.category.MyGridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:id="@+id/home_footer_grid"
        android:numColumns="2"
        android:horizontalSpacing="3dp"
        android:verticalSpacing="3dp"
        android:stretchMode="columnWidth"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="更多服务商"
        android:drawableEnd="@drawable/btn_arrow_right_gray"
        android:background="#fff"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        />
</LinearLayout>